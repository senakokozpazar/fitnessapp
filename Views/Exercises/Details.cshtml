@model FitnessApp.Models.Exercise
@{
    ViewData["Title"] = "Egzersiz Detayı";

    string imageFile = Model.ExerciseName switch
    {
        "Push Up" => "pushup.jpg",
        "Squat" => "squat.jpg",
        "Plank" => "plank.png",
        "Jumping Jacks" => "jumpingjacks.jpg",
        _ => "default.jpg"
    };

    string imagePath = Url.Content($"~/img/{imageFile}");
}

<div class="container my-5">
    <h2 class="text-center mb-4">@Model.ExerciseName</h2>

    <div class="card mx-auto shadow-sm rounded-4" style="max-width: 600px;">
        <img src="@imagePath"
             class="card-img-top rounded-top-4"
             alt="@Model.ExerciseName"
             style="height: 300px; object-fit: cover;" />

        <div class="card-body">
            <ul class="list-unstyled fs-5">
                <li class="mb-2">
                    <i class="bi bi-person-fill text-primary me-2"></i>
                    <strong>Kullanıcı ID:</strong> @Model.UserId
                </li>
                <li class="mb-2">
                    <i class="bi bi-clock-fill text-success me-2"></i>
                    <strong>Süre:</strong> @Model.DurationMinutes dakika
                </li>
                <li class="mb-2">
                    <i class="bi bi-calendar-event-fill text-warning me-2"></i>
                    <strong>Tarih:</strong> @Model.ExerciseDate.ToString("dd MMMM yyyy")
                </li>
            </ul>

            <div class="text-end">
                <a href="@Url.Action("Index", "Exercises")" class="btn btn-outline-primary mt-3">
                    <i class="bi bi-arrow-left"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        h2 {
            font-weight: 700;
            color: #0d6efd;
        }

        .card-body ul li {
            font-size: 1rem;
        }

        .btn-outline-primary {
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
        }

        .card {
            background-color: #ffffff;
        }

        body {
            background-color: #f2f5f8;
        }
    </style>
}
