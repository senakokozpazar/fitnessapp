@model FitnessApp.Models.Exercise
@{
    ViewData["Title"] = "Egzersiz Ekle";
}

<div class="container my-5" style="max-width: 600px;">
    <h2 class="text-center mb-4 text-primary fw-bold">Egzersiz Ekle</h2>

    <form asp-action="Add" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="UserId" class="form-label">Kullanıcı ID</label>
            <input asp-for="UserId" class="form-control" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ExerciseName" class="form-label">Egzersiz Adı</label>
            <input asp-for="ExerciseName" class="form-control" />
            <span asp-validation-for="ExerciseName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DurationMinutes" class="form-label">Süre (dk)</label>
            <input asp-for="DurationMinutes" type="number" min="1" class="form-control" />
            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ExerciseDate" class="form-label">Tarih</label>
            <input asp-for="ExerciseDate" type="date" class="form-control" />
            <span asp-validation-for="ExerciseDate" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index", "Exercises")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-lg"></i> Kaydet
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
