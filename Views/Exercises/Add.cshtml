@model FitnessApp.Models.Exercise

<h2>Egzersiz Ekle</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label>Kullanıcı ID</label>
        <input asp-for="UserId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Egzersiz Adı</label>
        <input asp-for="ExerciseName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Süre (dk)</label>
        <input asp-for="DurationMinutes" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tarih</label>
        <input asp-for="ExerciseDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>
