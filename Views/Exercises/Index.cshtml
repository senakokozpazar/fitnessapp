@model IEnumerable<FitnessApp.Models.Exercise>

<h2>Egzersizler</h2>

<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <a href="@Url.Action("Details", "Exercises", new { id = item.Id })" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm rounded-4">
                    <img src="https://source.unsplash.com/featured/?exercise,workout,@item.Id" class="card-img-top rounded-top-4" alt="@item.ExerciseName" style="height:180px; object-fit: cover;" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.ExerciseName</h5>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
