<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FitnessApp</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        /* Navbar */
        .navbar-brand {
            font-weight: 700;
            font-size: 1.6rem;
            letter-spacing: 2px;
            color: #0d6efd !important;
        }

        /* Footer */
        footer {
            background-color: #0d6efd;
            color: white;
            padding: 2rem 0;
            margin-top: 4rem;
        }

            footer a {
                color: #ffc107;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Hero Section */
        .hero {
            background: url('/images/fitness-hero.jpg') center center / cover no-repeat;
            height: 80vh;
            display: flex;
            align-items: center;
            color: white;
            text-shadow: 0 2px 5px rgba(0,0,0,0.7);
        }

        /* Buttons */
        .btn-primary {
            background-color: #0d6efd;
            border: none;
            padding: 0.75rem 1.8rem;
            font-weight: 600;
            border-radius: 50px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">FitnessApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto fw-semibold">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Anasayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Exercises/Index">Egzersizler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Exercises/Add">Egzersiz Ekle</a>
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center">
        <div class="container">
            <p>© 2025 FitnessApp. Tüm hakları saklıdır.</p>
            <p>
                <a href="#">Gizlilik Politikası</a> |
                <a href="#">Kullanım Şartları</a>
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle (Popper + JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
